<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mayday.common.service.IChatDao">
<select id="getChatRoomList" parameterType="String" resultType="com.mayday.common.vo.ChatRoomVO">
	SELECT room_id
	       , user_id
	       , user_name
	       , expert_id
	       , expert_name
	       , room_state
           , b.mem_state as user_state
	FROM chat_room a , member b
	WHERE expert_id = #{expertId}
    AND a.user_id = b.mem_id
	AND room_state = 'C'
</select>
<select id="getChatRoom" parameterType="String" resultType="com.mayday.common.vo.ChatRoomVO">
	SELECT room_id
	       , user_id
	       , user_name
	       , expert_id
	       , expert_name
	       , room_state
	FROM chat_room
	WHERE room_id = #{roomId}
</select>
<select id="getChatRoomId" parameterType="com.mayday.common.vo.ChatRoomVO" resultType="String">
	SELECT room_id
	FROM chat_room
	WHERE user_id = #{userId}
	AND expert_id = #{expertId}
</select>
<select id="getChatMessage" parameterType="String" resultType="com.mayday.common.vo.ChatMessageVO">
	SELECT message_id
	       , message
	       , to_char(message_time,'YY/MM/DD HH24:MI:SS') as message_time
          , DECODE(to_char(message_time,'YY.MM.DD'),to_char(sysdate,'YY.MM.DD'),to_char(message_time,'PM HH:MI'),to_char(message_time,'YY.MM.DD')) as message_date
	       , mem_id
	       , room_id
	       , mem_name
	       , un_read_count
	FROM chat_message
	WHERE room_id=#{roomId}
	ORDER BY MESSAGE_TIME ASC
</select>
<insert id="createChatRoom" parameterType="com.mayday.common.vo.ChatRoomVO">
	INSERT INTO chat_room (
				    room_id
				    , user_id
				    , user_name
				    , expert_id
				    , expert_name
				    , room_state
				) VALUES (
				    #{roomId}
				    , #{userId}
				    , #{userName}
				    , #{expertId}
				    , #{expertName}
				    , 'C'
				)
</insert>
<insert id="insertChatMessage" parameterType="com.mayday.common.vo.ChatMessageVO">
INSERT INTO chat_message (
			    message_id
			    , message
			    , message_time
			    , mem_id
			    , room_id
			    , mem_name
			    , un_read_count
			) VALUES (
			    SEQ_CHAT_NO.NEXTVAL
			    , #{message}
			    , sysdate
			    , #{memId}
			    , #{roomId}
			    , #{memName}
			    , 1
			)
</insert>
<update id="updateChatRoomStart" parameterType="String">
	UPDATE chat_room SET room_state='C'  WHERE room_id=#{roomId}
</update>
<update id="updateChatRoomStop" parameterType="String">
	UPDATE chat_room SET room_state='S'  WHERE room_id=#{roomId}
</update>
<delete id="deleteChatRoom" parameterType="String">
	DELETE FROM chat_room WHERE room_id=#{roomId}
</delete>
<delete id="deleteChatMessage" parameterType="String">
	DELETE FROM chat_message WHERE room_id=#{roomId}
</delete>
</mapper>
