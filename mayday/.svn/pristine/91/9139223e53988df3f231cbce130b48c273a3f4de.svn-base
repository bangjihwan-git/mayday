@charset "UTF-8";

.maydayscrollbar {
	background-color: white;
	overflow: auto;
}

.maydayscrollbar::-webkit-scrollbar {
	width: 5px; /*스크롤바의 너비*/
}

.maydayscrollbar::-webkit-scrollbar-thumb {
	background-color: #ffe691 !important; /*스크롤바의 색상*/
}

.chatscrollbar {
	display: flex;
	flex-direction: column-reverse;
	background-color: white;
	overflow-y: auto;
	border-radius: 10px;
}

.chatscrollbar::-webkit-scrollbar {
	width: 8px; /*스크롤바의 너비*/
	height: 20%;
}

.chatscrollbar::-webkit-scrollbar-thumb {
	background-color: #ffef9e !important; /*스크롤바의 색상*/
}

.myMsg {
	text-align: right;
}

.anotherMsg {
	text-align: left;
	margin-bottom: 5px;
}

.msg {
	display: inline-block;
	border-radius: 15px;
	padding: 7px 15px;
	margin-bottom: 10px;
	margin-top: 5px;
}

.msgTime {
	font-size: 12px;
	display: block;
}

.anotherMsg>.msg {
	background-color: #f1f0f0;
}

.anotherName {
	font-size: 12px;
	display: block;
}

.myMsg>.msg {
	/* background-color: #ffe691; */
	border: 1px;
	border-color: #ffe691 !important;
	color: black;
}
.text-size-m{
	font-size: 1.2rem;
}
.hit {
	animation-name: blink;
	animation-duration: 2s;
	animation-timing-function: ease;
	animation-iteration-count: infinite;
	font-size: 12px;
	vertical-align: top;
}

@keyframes blink {
	from {color: white;
	}
	30%	{
	color:rgb(116,96,73);
	}
	to {
	color: rgb(232,193,147);
	
	}
}